{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "name": "Primordial Swamp Design System",
  "version": "1.0.0",
  "description": "Centralized design tokens for consistent UI styling across the game",
  
  "colors": {
    "primary": {
      "main": "#4a9d5f",
      "light": "#6ab87a",
      "dark": "#3d7a4d",
      "hex": "0x4a9d5f",
      "description": "Primary brand color - Forest green, used for buttons, highlights, and positive feedback"
    },
    "secondary": {
      "main": "#3d7a4d",
      "light": "#5a9d6a",
      "dark": "#2a5a3a",
      "hex": "0x3d7a4d",
