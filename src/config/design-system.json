    },
    "background": {
      "main": "#1a1a1a",
      "panel": "#2a2a2a",
      "elevated": "#3a3a3a",
      "overlay": "rgba(0, 0, 0, 0.8)",
      "hex": "0x1a1a1a",
      "description": "Background colors for different surface levels"
    },
    "semantic": {
      "health": "#4a9d5f",
      "stamina": "#4a8bd9",
      "damage": "#d94a3d",
      "heal": "#51cf66",
      "buff": "#ffd43b",
      "debuff": "#845ef7",
      "poison": "#9d4a9d",
      "bleed": "#d94a3d",
      "stun": "#e8a735",
      "description": "Semantic colors for game-specific states"
    },
    "nodeTypes": {
      "combat": "#4a9d5f",
      "resource": "#5f9d4a",
      "event": "#9d7a4a",
      "elite": "#9d4a4a",
      "rest": "#4a7a9d",
      "boss": "#9d4a9d",
      "description": "Colors for map node types"
    }
  },

  "highContrastColors": {
    "primary": {
      "main": "#00ff00",
      "dark": "#00cc00"
    },
    "danger": {
      "main": "#ff0000",
      "dark": "#cc0000"
    },
    "text": {
      "primary": "#ffffff",
      "secondary": "#ffffff"
