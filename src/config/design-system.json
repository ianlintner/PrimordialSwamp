      "sm": "14px",
      "base": "16px",
      "md": "18px",
      "lg": "20px",
      "xl": "24px",
      "2xl": "28px",
      "3xl": "32px",
      "4xl": "36px",
      "5xl": "48px",
      "hero": "72px",
      "description": "Font size scale for consistent text sizing"
    },
    "fontWeight": {
      "normal": "normal",
      "bold": "bold",
