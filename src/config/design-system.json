  },

  "borders": {
    "radius": {
      "none": 0,
      "sm": 4,
      "md": 8,
      "lg": 12,
      "full": 9999
    },
    "width": {
      "thin": 1,
      "normal": 2,
      "thick": 3,
      "heavy": 4
    },
    "description": "Border radius and width options"
  },

  "shadows": {
    "none": "none",
    "sm": "0 1px 2px rgba(0, 0, 0, 0.5)",
    "md": "0 2px 4px rgba(0, 0, 0, 0.5)",
    "lg": "0 4px 8px rgba(0, 0, 0, 0.5)",
