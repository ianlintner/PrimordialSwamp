    },
    "danger": {
      "main": "#d94a3d",
      "light": "#e86b5f",
      "dark": "#b33d32",
      "hex": "0xd94a3d",
      "description": "Danger/error color - Red for damage, enemies, warnings"
    },
    "warning": {
      "main": "#e8a735",
      "light": "#f0be5a",
      "dark": "#c08d2a",
      "hex": "0xe8a735",
      "description": "Warning color - Yellow for caution states and events"
    },
    "info": {
      "main": "#4a8bd9",
      "light": "#6ba3e8",
      "dark": "#3d72b3",
      "hex": "0x4a8bd9",
      "description": "Info color - Blue for stamina, rest areas, neutral info"
    },
    "text": {
      "primary": "#f0f0f0",
