    "easing": {
      "linear": "Linear",
      "easeIn": "Power1",
      "easeOut": "Power2",
      "easeInOut": "Sine.easeInOut",
      "bounce": "Bounce"
    },
    "description": "Animation timing and easing options"
  },

  "layout": {
    "gameWidth": 1280,
    "gameHeight": 720,
    "safeAreaPadding": 40,
    "headerHeight": 60,
    "footerHeight": 60,
    "sidebarWidth": 200,
    "description": "Layout dimensions and safe areas"
